# Anchor App - Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# Server Configuration
# ============================================================================
NODE_ENV=development
PORT=3000

# ============================================================================
# Database
# ============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/anchor_db"

# ============================================================================
# Redis Cache
# ============================================================================
REDIS_URL="redis://localhost:6379"

# ============================================================================
# JWT Authentication
# ============================================================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ============================================================================
# Firebase (Authentication)
# ============================================================================
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"

# ============================================================================
# Phase 2: AI Enhancement Services
# ============================================================================

# Gemini 3 Pro Image (Primary) - Nano Banana Pro
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY="your-gemini-api-key-here"

# Quality Tier: 'premium' (gemini-3-pro-image-preview) or 'draft' (gemini-3-flash-preview)
GEMINI_TIER="premium"

# Replicate API (Fallback - Stable Diffusion XL ControlNet)
REPLICATE_API_TOKEN="r8_your_replicate_api_token_here"

# AI Provider: 'auto' (tries Gemini first), 'gemini', or 'replicate'
AI_PROVIDER="auto"

# Cloudflare R2 Storage (S3-compatible)
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
CLOUDFLARE_R2_ACCESS_KEY_ID="your-r2-access-key-id"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
CLOUDFLARE_R2_BUCKET_NAME="anchor-assets"
CLOUDFLARE_R2_PUBLIC_DOMAIN="https://pub-your-bucket-id.r2.dev"

# Google Cloud Text-to-Speech (Optional - Phase 2.5)
# GOOGLE_CLOUD_PROJECT_ID="your-gcp-project-id"
# GOOGLE_CLOUD_PRIVATE_KEY="your-gcp-private-key"
# GOOGLE_CLOUD_CLIENT_EMAIL="your-gcp-client-email"

# ============================================================================
# Phase 4: Monetization Services (Future)
# ============================================================================

# RevenueCat (Subscriptions)
# REVENUECAT_API_KEY="your-revenuecat-api-key"

# Printful (Print-on-Demand Merch)
# PRINTFUL_API_KEY="your-printful-api-key"

