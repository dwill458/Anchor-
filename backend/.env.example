# ============================================================================
# Anchor App - Backend Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values

# ----------------------------------------------------------------------------
# Database
# ----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/anchor_db"
REDIS_URL="redis://localhost:6379"

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
PORT=3000
NODE_ENV="development"

# ----------------------------------------------------------------------------
# Authentication & Security
# ----------------------------------------------------------------------------
JWT_SECRET="your-secret-key-here-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ----------------------------------------------------------------------------
# Firebase Configuration
# ----------------------------------------------------------------------------
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_PRIVATE_KEY="your-private-key"
FIREBASE_CLIENT_EMAIL="your-client-email"

# ----------------------------------------------------------------------------
# AI & Image Generation
# ----------------------------------------------------------------------------
# Google Cloud Vertex AI (Primary) - Imagen 3
# Note: Requires Google Cloud project with Vertex AI API enabled
# Get your service account key from: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_CLOUD_LOCATION="us-central1"
# Paste entire service account JSON key as a single-line string (escape quotes)
GOOGLE_CLOUD_CREDENTIALS_JSON='{"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}'

# Replicate API (Fallback) - Stable Diffusion
REPLICATE_API_TOKEN="your-replicate-token"

# AI Provider Selection (optional)
# Options: 'google' (primary), 'replicate' (fallback only), 'auto' (default - tries Google first)
AI_PROVIDER="auto"

# ----------------------------------------------------------------------------
# Storage (Cloudflare R2 - S3 Compatible)
# ----------------------------------------------------------------------------
R2_ACCESS_KEY_ID="your-access-key"
R2_SECRET_ACCESS_KEY="your-secret-key"
R2_BUCKET_NAME="anchor-assets"
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
R2_PUBLIC_URL="https://your-public-domain.com"

# ----------------------------------------------------------------------------
# E-commerce (Printful)
# ----------------------------------------------------------------------------
PRINTFUL_API_KEY="your-printful-key"
PRINTFUL_WEBHOOK_SECRET="your-webhook-secret"

# ----------------------------------------------------------------------------
# Subscriptions (RevenueCat)
# ----------------------------------------------------------------------------
REVENUECAT_API_KEY="your-revenuecat-key"

# ----------------------------------------------------------------------------
# Google Text-to-Speech
# ----------------------------------------------------------------------------
GOOGLE_TTS_API_KEY="your-google-tts-key"

# ----------------------------------------------------------------------------
# Optional - Analytics & Monitoring
# ----------------------------------------------------------------------------
SENTRY_DSN=""
SEGMENT_WRITE_KEY=""
