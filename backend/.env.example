# ============================================================================
# Anchor App - Backend Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values

# ----------------------------------------------------------------------------
# Database
# ----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/anchor_db"

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
PORT=3000
NODE_ENV="development"

# ----------------------------------------------------------------------------
# Authentication & Security
# ----------------------------------------------------------------------------
JWT_SECRET="your-secret-key-here-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ----------------------------------------------------------------------------
# Firebase Configuration (Admin SDK - Optional)
# ----------------------------------------------------------------------------
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_PRIVATE_KEY="your-private-key"
FIREBASE_CLIENT_EMAIL="your-client-email"

# ----------------------------------------------------------------------------
# AI & Image Generation
# ----------------------------------------------------------------------------
# Gemini 3 Pro Image (Primary) - Nano Banana Pro
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY="your-gemini-api-key-here"

# Replicate API (Fallback) - Stable Diffusion ControlNet
REPLICATE_API_TOKEN="your-replicate-token"

# ----------------------------------------------------------------------------
# Storage (Cloudflare R2 - S3 Compatible)
# ----------------------------------------------------------------------------
CLOUDFLARE_ACCOUNT_ID="your-account-id"
CLOUDFLARE_R2_ACCESS_KEY_ID="your-access-key"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your-secret-key"
CLOUDFLARE_R2_BUCKET_NAME="anchor-assets"
CLOUDFLARE_R2_PUBLIC_DOMAIN="https://pub-xxxx.r2.dev"
LOCAL_IP="192.168.0.4"

# ----------------------------------------------------------------------------
# Google Cloud / Vertex / TTS (Optional)
# ----------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT_ID="your-gcp-project-id"
GOOGLE_CLOUD_PRIVATE_KEY="your-gcp-private-key"
GOOGLE_CLOUD_CLIENT_EMAIL="your-gcp-client-email"
GOOGLE_CLOUD_LOCATION="us-central1"
GOOGLE_CLOUD_CREDENTIALS_JSON="{}"
GOOGLE_API_KEY="your-google-api-key"

# ----------------------------------------------------------------------------
# Optional - Monitoring
# ----------------------------------------------------------------------------
SENTRY_DSN=""
