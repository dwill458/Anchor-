# ============================================================================
# Anchor App - Environment Variables (All Projects)
# ============================================================================
# Copy this file to .env and fill in your actual values.
# Sections are grouped by backend, mobile (Expo), and legacy frontend.

# ----------------------------------------------------------------------------
# Backend (Node / API)
# ----------------------------------------------------------------------------
PORT=3000
NODE_ENV="development"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/anchor_db"

# Auth / JWT
JWT_SECRET="your-secret-key-here-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Firebase Admin (optional)
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_PRIVATE_KEY="your-private-key"
FIREBASE_CLIENT_EMAIL="your-client-email"

# AI Services
GEMINI_API_KEY="your-gemini-api-key"
REPLICATE_API_TOKEN="your-replicate-token"

# Google Cloud / Vertex / TTS (optional)
GOOGLE_CLOUD_PROJECT_ID="your-gcp-project-id"
GOOGLE_CLOUD_PRIVATE_KEY="your-gcp-private-key"
GOOGLE_CLOUD_CLIENT_EMAIL="your-gcp-client-email"
GOOGLE_CLOUD_LOCATION="us-central1"
GOOGLE_CLOUD_CREDENTIALS_JSON="{}"
GOOGLE_API_KEY="your-google-api-key"

# Storage (Cloudflare R2)
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
CLOUDFLARE_R2_ACCESS_KEY_ID="your-access-key"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your-secret-key"
CLOUDFLARE_R2_BUCKET_NAME="anchor-assets"
CLOUDFLARE_R2_PUBLIC_DOMAIN="https://pub-xxxx.r2.dev"
LOCAL_IP="192.168.0.4"

# ----------------------------------------------------------------------------
# Mobile App (Expo / React Native)
# ----------------------------------------------------------------------------
EXPO_PUBLIC_API_URL="http://192.168.0.4:8000"

# Analytics
EXPO_PUBLIC_ANALYTICS_ENABLED="true"
EXPO_PUBLIC_ANALYTICS_PROVIDER="mixpanel" # mixpanel | amplitude | both | none
EXPO_PUBLIC_MIXPANEL_TOKEN="your-mixpanel-token"
EXPO_PUBLIC_AMPLITUDE_API_KEY="your-amplitude-api-key"

# Error Tracking
EXPO_PUBLIC_SENTRY_DSN="your-sentry-dsn"
EXPO_PUBLIC_SENTRY_ENVIRONMENT="development"

# Performance (Firebase)
EXPO_PUBLIC_FIREBASE_PERF_ENABLED="true"

# Subscriptions (RevenueCat)
EXPO_PUBLIC_REVENUECAT_API_KEY="your-revenuecat-key"
EXPO_PUBLIC_REVENUECAT_IOS_API_KEY="your-revenuecat-ios-key"
EXPO_PUBLIC_REVENUECAT_ANDROID_API_KEY="your-revenuecat-android-key"
EXPO_PUBLIC_REVENUECAT_ENTITLEMENT_PRO="pro"

# ----------------------------------------------------------------------------
# Legacy Frontend (if still used)
# ----------------------------------------------------------------------------
API_BASE_URL="http://localhost:3000"

# Legacy Firebase Web (optional)
EXPO_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN="your-app.firebaseapp.com"
EXPO_PUBLIC_FIREBASE_PROJECT_ID="your-firebase-project-id"
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET="your-app.appspot.com"
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
EXPO_PUBLIC_FIREBASE_APP_ID="your-firebase-app-id"
